#base 00
for i in /*; do
  if [ $i != "/dev" ] && [ $i != "/proc" ] && [ $i != "/tmp" ]; then
#    chown -R root:root $i
    chmod -R g-w,o-w $i
  fi
done
mkdir -p /var/run/applications
chmod -R g+w,o+w /var/run/applications
chmod +t /var/run/applications
if [ "`readlink /bin/su`" == "/bin/busybox" ]; then
	chmod u+s /bin/busybox
else
	chmod u+s /bin/su
fi
chmod 640 /etc/securetty
chmod 1777 /var/tmp
