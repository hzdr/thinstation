name=jemalloc
epoch=1
version=5.0.1
release=3
source=("https://github.com/jemalloc/jemalloc/releases/download/${version}/${name}-${version}.tar.bz2")

build() {
  cd $name-$version

  ./configure --prefix=/usr
  make

  make DESTDIR="$PKG" install

  install -Dm644 COPYING "$PKG/usr/share/licenses/$name/COPYING"
}
