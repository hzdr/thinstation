name=libcap-ng
version=0.7.8
release=1
source=(http://people.redhat.com/sgrubb/$name/$name-$version.tar.gz)

build() {
  cd $name-$version

  ./configure --prefix=/usr --enable-static=no --with-python=no
  make
  make check
  make DESTDIR=$PKG install
}
