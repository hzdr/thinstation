name=parallel
version=20160622
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.bz2{,.sig})

build() {
  cd "$name-$version"
  ./configure --prefix=/usr
  make
  make DESTDIR="$PKG/" install

  # FIXME
  ln -sf parallel "$PKG/usr/bin/sem"
}

