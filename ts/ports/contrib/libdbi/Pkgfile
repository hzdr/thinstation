name=libdbi
version=0.9.0
release=2
source=("http://downloads.sourceforge.net/project/${name}/${name}/${name}-${version}/${name}-${version}.tar.gz")

build() {
  cd "${SRC}/${name}-${version}"
  ./configure --prefix=/usr
  make CFLAGS="-fno-fast-math"
  make DESTDIR=${PKG} install
}
