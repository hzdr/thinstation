# Description: wxWidgets for GTK+.
# URL: http://www.wxwidgets.org/
# Maintainer: Danny Rawlins, crux at romster dot me
# Packager: Antti Nykanen, aon at iki dot fi
# Depends on: gtk glu gst-plugins-base-compat

name=wxgtk
version=3.0.2
release=1
source=(http://downloads.sourceforge.net/wxwindows/wxWidgets-$version.tar.bz2)

build() {
	cd wxWidgets-$version

	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--with-gtk=2 \
		--with-opengl \
		--enable-unicode \
		--enable-graphics_ctx \
		--enable-mediactrl \
		--enable-webview \
		--with-regex=builtin \
		--with-libpng=sys \
		--with-libxpm=sys \
		--with-libjpeg=sys \
		--with-libtiff=sys \
		--disable-precomp-headers

	make
	make DESTDIR=$PKG install

	rm -r \
		$PKG/usr/share/locale \
		$PKG/usr/share/bakefile
}
