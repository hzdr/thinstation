name=xmlto
version=0.0.28
release=2
source=("https://fedorahosted.org/releases/x/m/${name}/${name}-${version}.tar.bz2")

build() {
  cd "$SRC/${name}-${version}"

  ./configure --prefix=/usr \
              --mandir=/usr/share/man
  make
  make DESTDIR="$PKG" install
}


