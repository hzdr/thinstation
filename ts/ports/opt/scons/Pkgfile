# Depends on: python

name=scons
version=2.3.0
release=1
source=(http://download.sourceforge.net/$name/$name-$version.tar.gz)

build() {
	cd $name-$version

	/usr/bin/python setup.py install --prefix=/usr --root=$PKG
}
