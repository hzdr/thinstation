name=scapy
pname=scapy
version=pip
release=1
source=()

build() {
        pip install $name --download=$SRC --no-binary :all:
        mkdir -p $SRC/$name
        tar -xvf $SRC/$pname*.tar.* -C $SRC/$name || unzip -d $SRC/$name $pname-*.zip
        cd $SRC/$name/*

        python ./setup.py install --root $PKG
}

